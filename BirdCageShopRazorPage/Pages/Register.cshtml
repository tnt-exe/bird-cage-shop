@page
@model BirdCageShopRazorPage.Pages.RegisterModel

@{
    ViewData["Title"] = "Register";
}

@{
    if (ViewData["register-notification"] != null)
    {
        <div class="alert alert-warning" >
            @ViewData["register-notification"]
        </div>
    }
}

<section class="main">
<h1>Register</h1>
        <form method="post">
        <div class="main_content_container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                Full Name
                <input asp-for="User.FullName" class="form-control" />
                <span asp-validation-for="User.FullName" class="text-danger"></span>
            </div>
            <div>
                Email
                <input asp-for="User.Email" class="form-control" required />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div>
                Password
                <input asp-for="User.Password" class="form-control" required />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            <div>
                Phone Number
                <input asp-for="User.Phone" class="form-control" required />
                <span asp-validation-for="User.Phone" class="text-danger"></span>
            </div>
            <div>
                Date of Birth
                <input asp-for="User.Dob" class="form-control" required />
                <span asp-validation-for="User.Dob" class="text-danger"></span>
            </div>
            <div>
                Gender
                <input asp-for="User.Gender" class="form-control" required />
                <span asp-validation-for="User.Gender" class="text-danger"></span>
            </div>
            <div>
                Address
                <input asp-for="User.Address" class="form-control" required />
                <span asp-validation-for="User.Address" class="text-danger"></span>
            </div>
            <div>
                Avatar
                <input asp-for="User.AvatarUrl" class="form-control" />
                <span asp-validation-for="User.AvatarUrl" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Register" class="btn btn-primary" />
                <a class="btn btn-primary" asp-page="Index">Back</a>
            </div>
    </div>
        </form>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
