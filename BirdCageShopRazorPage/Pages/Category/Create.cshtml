@page
@model BirdCageShopRazorPage.Pages.Category.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="mx-3">
    <h1>Create</h1>

    <h4>Category</h4>
    <hr />
</div>
    <div class="mx-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category.CategoryName" class="control-label"></label>
                <input asp-for="Category.CategoryName" class="form-control w-25" />
                <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.Status" class="control-label"></label>
                <select asp-for="Category.Status" class="form-control w-25">
                    <option value="1">Active</option>
                    <option value="0">Inactive</option>
                </select>
                <span asp-validation-for="Category.Status" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Create" class="btn btn-success" />
                <a class="btn btn-primary" asp-page="Index">Back to List</a>
            </div>
            </>
        </form>
    </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
