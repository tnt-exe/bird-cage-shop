@page
@inject IHttpContextAccessor HttpContextAccessor
@model BirdCageShopRazorPage.Pages.Cage.IndexModel

@{
    ViewData["Title"] = "Index";
    var checkRole = HttpContextAccessor.HttpContext?.User.Claims.Where(c => c.Type == "scope").Any(c => c.Value.Contains("Staff") || c.Value.Contains("Admin")) ?? false;
}

@if (TempData["notification"] != null)
{
    <h2 style="color:blue">@TempData["notification"]</h2>
}
@if (!checkRole)
{

    <div>
        <section class="customization">
            <h2>
                Personalize Your Bird's Paradise
                @* <i class="fa-solid fa-pen me-2" style="font-size: 24px; color:white; opacity:0.5"></i> *@
            </h2>
            <p>Make your bird's home uniquely theirs. Choose from a range of colors, sizes, and accessories to create a one-of-a-kind bird cage tailored to your feathered friend's preferences</p>
            <button>Try now</button>
        </section>

        <section class="product">
            <h1>Explore Our Selection</h1>

            <div class="product_item_container">
                @foreach (var item in Model.Cage)
                {
                    @if (item.Status.Equals("Available"))
                    {
                        <div class="product_item">
                            @if (item.ImageUrl is null)
                            {
                                <img src="https://t3.ftcdn.net/jpg/02/48/42/64/360_F_248426448_NVKLywWqArG2ADUxDq6QprtIzsF82dMF.jpg" />
                            }
                            else
                            {
                                <img src="@item.ImageUrl" />
                            }
                            <h3>@item.CageName</h3>
                            <h5>@item.Description</h5>
                            <span>@item.CagePrice</span>
                            <button><a style="color: white; text-decoration: none" asp-page="/Cage/Details" asp-route-id="@item.CageId"><i class="fa-solid fa-cart-plus me-2"></i>Add to Cart</a></button>
                        </div>
                    }
                }
            </div>
        </section>
    </div>
}

else
{
    <p>
        <a asp-page="Create" class="btn btn-primary">Create New</a>
    </p>
    <div>
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>
                        <label>Preview</label>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cage[0].CageName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cage[0].Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cage[0].CagePrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cage[0].Height)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cage[0].Radius)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cage[0].CageWeight)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cage[0].Description)
                    </th>
                    <th>
                        <div>Actions</div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cage)
                {
                    <tr class="align-middle">
                        <td>
                            @if (item.ImageUrl is null)
                            {
                                <img src="https://t3.ftcdn.net/jpg/02/48/42/64/360_F_248426448_NVKLywWqArG2ADUxDq6QprtIzsF82dMF.jpg" />
                            }
                            else
                            {
                                <img src="@item.ImageUrl" />
                            }

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CageName)
                        </td>
                        <td>
                            @switch (item.Status!)
                            {
                                case "Undefined":
                                    <span class="badge bg-dark text-white">@Html.DisplayFor(modelItem => item.Status)</span>
                                    break;
                                case "Unavailable":
                                    <span class="badge bg-danger">@Html.DisplayFor(modelItem => item.Status)</span>
                                    break;
                                case "Available":
                                    <span class="badge bg-success">@Html.DisplayFor(modelItem => item.Status)</span>
                                    break;
                                case "Custom":
                                    <span class="badge bg-info text-dark">@Html.DisplayFor(modelItem => item.Status)</span>
                                    break;
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CagePrice) đ
                        </td>
                        <td>
                            @if (item.Height is not null)
                            {
                                @Html.DisplayFor(modelItem => item.Height)
                                <text> cm</text>
                            }
                        </td>
                        <td>
                            @if (item.Radius is not null)
                            {
                                @Html.DisplayFor(modelItem => item.Radius)
                                <text> cm</text>
                            }
                        </td>
                        <td>
                            @if (item.CageWeight is not null)
                            {
                                @Html.DisplayFor(modelItem => item.CageWeight)
                                <text> kg</text>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @if (item.Status is not null && item.Status.Equals("Available"))
                            {
                                <a asp-page="./MakeOrder" asp-route-id="@item.CageId">Order</a>
                                <br />
                            }
                            <a asp-page="./Edit" asp-route-id="@item.CageId"><i class="fa fa-edit" style="font-size: 24px;"></i></a>
                            <a asp-page="./Details" asp-route-id="@item.CageId"><i class="fa fa-info" style="font-size: 24px;"></i></a>
                            <a asp-page="./Delete" asp-route-id="@item.CageId"><i class="fa fa-trash" style="font-size: 24px;"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}