@page
@model BirdCageShopRazorPage.Pages.Order.IndexModel

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<div class="row">
    <div class="col-md-10 mx-3 mb-3">
        <h2 class="fw-bold display-4">Danh sách giỏ hàng</h2>

        @if (Model.Order.Count() == 0)
        {
            <h2 class="display-4 fw-bold">Giỏ hàng trống</h2>
        }
    </div>

    <div class="col-md-2">
        @if (Model.Order.Where(o => o.Status == 4).Count() == 0)
        {
            <form action="/Order/Create" method="post">
                @Html.AntiForgeryToken()
                <button type="submit">Thêm giỏ hàng mới</button>
            </form>
        }
    </div>
</div>

@if (TempData["notification"] != null)
{
    <h3 style="color:green" class="text-center">@TempData["notification"]</h3>
}

<table class="table table-striped mx-3" style="width: 98.5%;">
    <thead style="background-color: #B5DA98">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].PaymentStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ShipDate)
            </th>
            <th><div>Action</div></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Order) {
        <tr class="align-middle">
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Enum.GetName(typeof(BusinessObject.Enums.OrderStatus), item.Status)
            </td>
            <td>
                @Enum.GetName(typeof(BusinessObject.Enums.PaymentStatus), item.PaymentStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipDate)
            </td>
            <td>
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.OrderId"><i class="fa fa-info" style="font-size: 24px;"></i></a>
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.OrderId"><i class="fa fa-trash" style="font-size: 24px;"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
<style>
    .table-striped tbody tr:nth-child(even) {
        background-color: #C6ECBE;
    }
</style>
